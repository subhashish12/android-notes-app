<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearNotepadColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewbanner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:visibility="gone"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="@string/banner1_id" />

    </LinearLayout>

    <EditText
        android:id="@+id/titleNotepad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@null"
        android:hint="Title"
        android:textSize="@dimen/text_size_title_sticky"
        android:maxLength="60"
        android:gravity="center"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_margin="4dp"
        android:background="@color/colorAccent" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <com.prodatadoctor.CoolStickyNotes.LinedEditTextUtil.LineEditText
            android:id="@+id/contentNotepad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@null"
            android:gravity="start"
            android:hint="Enter Text here...."
            android:textColor="#000000" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:src="@drawable/edit" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linearTools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <HorizontalScrollView
                android:id="@+id/horizontalColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:scrollbars="none"
                android:padding="2dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/NoteColorDefault"
                        android:layout_width="@dimen/tools_HW"
                        android:layout_height="@dimen/tools_HW"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/itemborder"
                        android:gravity="center" />

                    <ImageView
                        android:id="@+id/NoteColor1"
                        android:layout_width="@dimen/tools_HW"
                        android:layout_height="@dimen/tools_HW"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/note1"
                        android:gravity="center" />

                    <ImageView
                        android:id="@+id/NoteColor2"
                        android:layout_width="@dimen/tools_HW"
                        android:layout_height="@dimen/tools_HW"
                        android:layout_marginRight="15dp"
                        android:background="@color/note2"
                        android:gravity="center" />

                    <ImageView
                        android:id="@+id/NoteColor3"
                        android:layout_width="@dimen/tools_HW"
                        android:layout_height="@dimen/tools_HW"
                        android:layout_marginRight="15dp"
                        android:background="@color/note3"
                        android:gravity="center" />

                    <ImageView
                        android:id="@+id/NoteColor4"
                        android:layout_width="@dimen/tools_HW"
                        android:layout_height="@dimen/tools_HW"
                        android:layout_marginRight="15dp"
                        android:background="@color/note4"
                        android:gravity="center" />

                    <ImageView
                        android:id="@+id/NoteColor5"
                        android:layout_width="@dimen/tools_HW"
                        android:layout_height="@dimen/tools_HW"
                        android:layout_marginRight="15dp"
                        android:background="@color/note5"
                        android:gravity="center" />

                    <ImageView
                        android:id="@+id/NoteColor6"
                        android:layout_width="@dimen/tools_HW"
                        android:layout_height="@dimen/tools_HW"
                        android:layout_marginRight="15dp"
                        android:background="@color/note6"
                        android:gravity="center" />

                    <ImageView
                        android:id="@+id/NoteColor7"
                        android:layout_width="@dimen/tools_HW"
                        android:layout_height="@dimen/tools_HW"
                        android:layout_marginRight="15dp"
                        android:background="@color/note7"
                        android:gravity="center" />

                    <ImageView
                        android:id="@+id/NoteColor8"
                        android:layout_width="@dimen/tools_HW"
                        android:layout_height="@dimen/tools_HW"
                        android:layout_marginRight="15dp"
                        android:background="@color/note8"
                        android:gravity="center" />

                    <ImageView
                        android:id="@+id/NoteColor9"
                        android:layout_width="@dimen/tools_HW"
                        android:layout_height="@dimen/tools_HW"
                        android:layout_marginRight="15dp"
                        android:background="@color/note9"
                        android:gravity="center" />

                    <ImageView
                        android:id="@+id/NoteColor10"
                        android:layout_width="@dimen/tools_HW"
                        android:layout_height="@dimen/tools_HW"
                        android:layout_marginRight="15dp"
                        android:background="@color/note10"
                        android:gravity="center" />

                    <ImageView
                        android:id="@+id/NoteColor11"
                        android:layout_width="@dimen/tools_HW"
                        android:layout_height="@dimen/tools_HW"
                        android:layout_marginRight="15dp"
                        android:background="@color/note11"
                        android:gravity="center" />

                    <ImageView
                        android:id="@+id/NoteColor12"
                        android:layout_width="@dimen/tools_HW"
                        android:layout_height="@dimen/tools_HW"
                        android:layout_marginRight="15dp"
                        android:background="@color/note12"
                        android:gravity="center" />

                    <ImageView
                        android:id="@+id/NoteColor13"
                        android:layout_width="@dimen/tools_HW"
                        android:layout_height="@dimen/tools_HW"
                        android:layout_marginRight="15dp"
                        android:background="@color/note13"
                        android:gravity="center" />

                    <ImageView
                        android:id="@+id/NoteColor14"
                        android:layout_width="@dimen/tools_HW"
                        android:layout_height="@dimen/tools_HW"
                        android:layout_marginRight="15dp"
                        android:background="@color/note14"
                        android:gravity="center" />

                    <ImageView
                        android:id="@+id/NoteColor15"
                        android:layout_width="@dimen/tools_HW"
                        android:layout_height="@dimen/tools_HW"
                        android:layout_marginRight="15dp"
                        android:background="@color/note15"
                        android:gravity="center" />
                </LinearLayout>
            </HorizontalScrollView>


            <HorizontalScrollView
                android:id="@+id/horizontalFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/NoteFont1"
                        android:layout_width="@dimen/tools_HW"
                        android:layout_height="@dimen/tools_HW"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/button_check"
                        android:gravity="center"
                        android:text="Aa"
                        android:textColor="#000000"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/NoteFont2"
                        android:layout_width="@dimen/tools_HW"
                        android:layout_height="@dimen/tools_HW"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/button_check"
                        android:gravity="center"
                        android:text="Aa"
                        android:textColor="#000000"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/NoteFont3"
                        android:layout_width="@dimen/tools_HW"
                        android:layout_height="@dimen/tools_HW"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/button_check"
                        android:gravity="center"
                        android:text="Aa"
                        android:textColor="#000000"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/NoteFont4"
                        android:layout_width="@dimen/tools_HW"
                        android:layout_height="@dimen/tools_HW"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/button_check"
                        android:gravity="center"
                        android:text="Aa"
                        android:textColor="#000000"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/NoteFont5"
                        android:layout_width="@dimen/tools_HW"
                        android:layout_height="@dimen/tools_HW"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/button_check"
                        android:gravity="center"
                        android:text="Aa"
                        android:textColor="#000000"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/NoteFont6"
                        android:layout_width="@dimen/tools_HW"
                        android:layout_height="@dimen/tools_HW"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/button_check"
                        android:gravity="center"
                        android:text="Aa"
                        android:textColor="#000000"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/NoteFont7"
                        android:layout_width="@dimen/tools_HW"
                        android:layout_height="@dimen/tools_HW"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/button_check"
                        android:gravity="center"
                        android:text="Aa"
                        android:textColor="#000000"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/NoteFont8"
                        android:layout_width="@dimen/tools_HW"
                        android:layout_height="@dimen/tools_HW"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/button_check"
                        android:gravity="center"
                        android:text="Aa"
                        android:textColor="#000000"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/NoteFont9"
                        android:layout_width="@dimen/tools_HW"
                        android:layout_height="@dimen/tools_HW"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/button_check"
                        android:gravity="center"
                        android:text="Aa"
                        android:textColor="#000000"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/NoteFont10"
                        android:layout_width="@dimen/tools_HW"
                        android:layout_height="@dimen/tools_HW"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/button_check"
                        android:gravity="center"
                        android:text="Aa"
                        android:textColor="#000000"
                        android:textSize="25sp" />

                </LinearLayout>
            </HorizontalScrollView>


            <LinearLayout
                android:id="@+id/linearLayoutSeekbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tools_HW"
                android:background="#fffeb1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/minus" />

                <SeekBar
                    android:id="@+id/seekbarTexrSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:max="30"
                    android:progress="15" />

                <!--android:max="@dimen/textsize_seekbar_max"-->
                <!--android:progress="@dimen/textsize_seekbar_progress"-->

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/increase" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/button_bg_sticky"
            android:gravity="center"
            android:padding="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ibTextColor"
                    android:layout_width="@dimen/main_button_HW"
                    android:layout_height="@dimen/main_button_HW"
                    android:background="@drawable/colour" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Color"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sticky_icon_text_size" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ibTextFont"
                    android:layout_width="@dimen/main_button_HW"
                    android:layout_height="@dimen/main_button_HW"
                    android:background="@drawable/text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Font"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sticky_icon_text_size" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ibTextSize"
                    android:layout_width="@dimen/main_button_HW"
                    android:layout_height="@dimen/main_button_HW"
                    android:background="@drawable/text_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Text Size"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sticky_icon_text_size" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ibDone"
                    android:layout_width="@dimen/main_button_HW"
                    android:layout_height="@dimen/main_button_HW"
                    android:background="@drawable/done" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Done"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sticky_icon_text_size" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>