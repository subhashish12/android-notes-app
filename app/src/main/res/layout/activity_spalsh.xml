<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/splash_color_bg">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/relative"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/spl_text_margin"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:textSize="@dimen/splash_text_size"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/relative"
            android:layout_centerInParent="true">

            <!--<ImageView-->
                <!--android:layout_width="@dimen/splash_img_width"-->
                <!--android:layout_height="@dimen/splash_img_width"-->
                <!--android:background="@drawable/spalsh_img_bg"/>-->

            <ImageView
                android:id="@+id/img_spl"
                android:layout_width="@dimen/splash_img_width"
                android:layout_height="@dimen/splash_img_width"
                android:background="@drawable/logo"
                android:layout_centerInParent="true"/>



        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn"
                android:layout_width="@dimen/start_btn_W"
                android:layout_height="@dimen/start_btn_H"
                android:background="@drawable/start"
                android:layout_marginBottom="20dp"
                android:textSize="@dimen/text_size_title_sticky"
                android:textColor="#ffffff"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="5dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:text="@string/privacypolicy"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/spash_privacy_text_size" />

                <Button
                    android:id="@+id/exit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/exit" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
