<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/notepad_margin"
    android:padding="@dimen/todo_padding"
    android:orientation="vertical"
    android:clickable="true"
    android:id="@+id/linearRoot"
    android:focusable="true">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        card_view:cardCornerRadius="3dp">


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/all_note_height"
            android:background="#e4b23a"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/relativeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/notepad_item_gradient"
                android:gravity="center"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="22 Jan 2018 22:10"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/all_txtsize_content" />

                    <TextView
                        android:id="@+id/textViewTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:lines="1"
                        android:maxLines="1"
                        android:text="title"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/all_txtsize_title" />

                </LinearLayout>


                <ImageButton
                    android:id="@+id/ibOptionMenuNotepad"
                    android:layout_width="@dimen/option_menu_icon_HW"
                    android:layout_height="@dimen/option_menu_icon_HW"
                    android:background="@drawable/option_icon" />
                <!--style="?android:attr/actionOverflowButtonStyle"-->


            </LinearLayout>


            <com.prodatadoctor.CoolStickyNotes.LinedEditTextUtil.LineEditText
                android:id="@+id/textViewC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/relativeTitle"
                android:layout_margin="@dimen/all_margin_content"
                android:background="@null"
                android:focusable="false"
                android:fontFamily="serif"
                android:gravity="start"
                android:lines="7"
                android:maxLines="1"
                android:textColor="#000000"
                android:textSize="@dimen/all_txtsize_content"
                android:inputType="textNoSuggestions|textMultiLine"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>